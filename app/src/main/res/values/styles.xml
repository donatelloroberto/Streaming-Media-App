<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardStyle">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>
    
    <style name="TextStyle.Primary">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="TextStyle.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="TextStyle.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
